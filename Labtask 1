Q3.


#include <iostream>
#include <string>
using namespace std;

int main() {
    string input;
    
    cout << "Enter input: ";
    getline(cin, input);
    
    bool isComment = false;
    
   
    if (input.length() >= 2 && input[0] == 47 && input[1] == 47) {
        isComment = true;
    }
   
    else if (input.length() >= 2 && input[0] == 47 && input[1] == 42) {
        isComment = true;
    }
    
    else if (input.length() >= 2 && input[input.length()-2] == 42 && input[input.length()-1] == 47) {
        isComment = true;
    }
    
    if (isComment) {
        cout << "This is a single line comment" << endl;
    } else {
        cout << "This is not a comment line" << endl;
    }
    
    return 0;
}
